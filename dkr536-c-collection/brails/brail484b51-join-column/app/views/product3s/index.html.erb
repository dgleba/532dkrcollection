
<row class="row is-table-row" >

  <div class="col-sm-1 ">
    <%= link_to 'Create', new_product3_path , class: "btn btn-success"%>
  </div>

  <div class="col-sm-2 ">
    <h4>Listing Product3s</h4>
  </div>
  
</row>


<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="1"></th>
            <th>Name</th>
      <th>pfeatureid</th>
      <th>Active status</th>
      <th>Sort order</th>
    </tr>
  </thead>

  <tbody>
    <% @product3s.each do |product3| %>
      <tr>
        <td>
          <div class="btn-group">
          <%= link_to 'Show', product3, class: "btn btn-info", :style=>'color:#FFFFFF;' %>
          <%= link_to 'Edit', edit_product3_path(product3), class: "btn btn-primary", :style=>'color:#FFFFFF;' %>
          <% #commentedout  = link_to 'Destroy', product3, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning", :style=>'color:#FFFFFF;' %>
          </div>
        </td>
        
        <td><%= product3.name %></td>
        <td><%= product3.pfeature_id %></td>
        
        <td><%= product3.active_status %></td>
        <td><%= product3.sort_order %></td>
        <td><%= "#{product3.id},#{product3.name},fav:#{product3.pfeature_id}" %></td>
        <td><%= product3.id %></td>
        <td><%= product3.pfid2 %></td>
        
        <% if product3.pfeature_id.present?  %>
        <td><%= "#{product3.id},#{product3.name},[FAV]" %></td>
        <% else %>
        <td><%= "#{product3.id},#{product3.name}" %></td>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
